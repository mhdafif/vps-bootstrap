# ===== VPS BOOTSTRAP CONFIG =====
USERNAME=aafif
TIMEZONE=Asia/Jakarta

# Firewall ports (public)
ALLOW_HTTP=true
ALLOW_HTTPS=true

# If you want to keep SSH public open (NOT recommended if you use Tailscale)
ALLOW_SSH_PUBLIC=false
SSH_PORT=22

# ===== TMUX =====
TMUX_SESSION=main

# Where your project lives (used as default tmux working dir)
PROJECT_DIR="/home/aafif/apps"

# Commands to run in each pane (you can change these)
WEB_CMD="pnpm dev:web"
API_CMD="pnpm dev:api"
COMPOSE_CMD="docker compose up -d"
LOGS_CMD="docker compose logs -f --tail=200"

# ===== OPENCODE CLI =====
INSTALL_OPENCODE_CLI=true

# ===== OPTIONAL =====
INSTALL_TAILSCALE=true
INSTALL_FAIL2BAN=true
